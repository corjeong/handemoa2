<!-- view table -->
<select id="postreportList" resultType="postreportjoindto">
 select * from postreportjoin
</select>

<select id="postReportDetail" resultType="postreportdto" parameterType="int">
 select * from postreport where postnum = #{postnum}
</select>

<select id="divisionPostReport" resultType="postreportjoindto" parameterType="int">
 select * from postreportjoin where divisioncode = #{divisioncode}
</select>




<select id="commentreportList" resultType="commentreportjoindto">
 select * from commentreportjoin
</select>

<select id="commentReportDetail" resultType="commentreportdto" parameterType="int">
 select * from commentreport where commentreportnum = #{commentreportnum}
</select>

</mapper>











